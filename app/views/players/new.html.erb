<h1>Nouveau joueur</h1>

<%= form_with model: @player, url: players_path do |form| %>
  <div>
    <%= form.label :name, "Nom" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :role_id, "Rôle" %><br>
    <%= form.collection_select :role_id, @roles, :id, :name %>
  </div>

  <div>
    <%= form.label :team_id, "Equipe" %><br>
    <%= form.collection_select :team_id, @teams, :id, :name, include_blank: "Aucune équipe" %>
  </div>

  <div>
    <%= form.submit "Créer" %>
  </div>
<% end %>